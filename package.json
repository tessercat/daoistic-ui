{
  "name": "daoistic-ui",
  "version": "0.0.1",
  "author": "Peter Christensen",
  "license": "CC-BY-NC-ND-4.0",
  "description": "Daoistic UI.",
  "homepage": "https://daoistic.ca",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tessercat/daoistic-ui.git"
  },
  "bugs": {
    "url": "https://github.com/tessercat/daoistic-ui/issues"
  },
  "scripts": {
    "css:clean": "rimraf dist/css/*",
    "css:gzip": "gzip dist/css/*.?????.css",
    "css:sass-dev": "node-sass src/scss/daoistic.scss dist/css/daoistic-dev.css --source-map-contents --output-style expanded",
    "css:post-dev": "postcss dist/css/daoistic-dev.css --config postcss/dev --no-map --output dist/css/daoistic-postdev.css",
    "css:build-dev": "npm run css:sass-dev && npm run css:post-dev",
    "css:sass-dist": "node-sass src/scss/daoistic.scss dist/css/daoistic-dist.css --output-style compressed",
    "css:post-dist": "postcss dist/css/daoistic-dist.css --no-map --config postcss/dist --output dist/css/daoistic.css",
    "css:build-dist": "npm run css:sass-dist && npm run css:post-dist && npm run css:gzip",
    "js:clean": "rimraf dist/js/*",
    "js:gzip": "gzip dist/js/*.?????.js",
    "js:build-dist": "webpack && npm run js:gzip",
    "build-dist": "npm run css:clean && npm run css:build-dist && npm run js:clean && npm run js:build-dist",
    "build": "npm run css:clean && npm run css:build-dev && npm run css:build-dist && npm run js:clean && npm run js:build-dist"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "cssnano": "^4.1.10",
    "gzip-cli": "^1.2.0",
    "node-sass": "^4.14.0",
    "postcss-cli": "^7.1.1",
    "postcss-hash": "^2.0.0",
    "webpack": "^5.12.1",
    "webpack-cli": "^4.3.1"
  }
}
